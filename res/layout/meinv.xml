<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/load"
        android:id="@+id/ll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/meinvimg"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"></ImageView>

        <RelativeLayout
            android:background="@drawable/toolbar_bg"
            android:id="@+id/title"
            android:layout_height="40dp"
            android:layout_width="fill_parent">

            <ImageButton
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:layout_alignTop="@+id/refresh"
                android:id="@+id/share"
                android:layout_marginLeft="36dp"
                android:background="@drawable/share_selector"
                android:layout_alignParentLeft="true"></ImageButton>

            <ImageButton
                android:layout_height="35dp"
                android:layout_toRightOf="@+id/share"
                android:layout_width="35dp"
                android:layout_alignTop="@+id/share"
                android:id="@+id/save"
                android:layout_marginLeft="36dp"
                android:background="@drawable/save_selector"></ImageButton>

            <ImageButton
                android:layout_height="35dp"
                android:layout_toRightOf="@+id/save"
                android:layout_alignParentBottom="true"
                android:layout_width="35dp"
                android:id="@+id/crop"
                android:layout_marginLeft="36dp"
                android:background="@drawable/crop_selector"></ImageButton>

            <ImageButton
                android:layout_centerVertical="true"
                android:layout_height="35dp"
                android:layout_toRightOf="@+id/crop"
                android:layout_width="35dp"
                android:id="@+id/refresh"
                android:layout_marginLeft="36dp"
                android:background="@drawable/refresh_selector"></ImageButton>
        </RelativeLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>